<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/button</item>
    </style>

    <!-- The style for the 3 columns -->
    <style name="column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/background</item>
    </style>

    <!-- The style for the score info -->
    <style name="common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Remove the size limitation -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- The style for the heading -->
    <style name="heading" parent="common">
        <item name="android:background">@color/button</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <!-- The style for the set info -->
    <style name="info" parent="common">
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <!-- Put margins around heading -->
    <style name="title" parent="heading">
        <item name="android:layout_margin">@dimen/padding</item>
    </style>

    <!-- The style for the score counters  -->
    <style name="score" parent="common">
        <item name="android:background">@color/background</item>
        <item name="android:layout_marginLeft">@dimen/padding</item>
        <item name="android:layout_marginRight">@dimen/padding</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
        <item name="android:textSize">@dimen/counter_size</item>
    </style>

    <!-- The background for the buttons was made with http://angrytools.com/android/button/ -->
    <!-- The style for the buttons -->
    <style name="button" parent="common">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginLeft">@dimen/padding</item>
        <item name="android:layout_marginRight">@dimen/padding</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
    </style>

    <!-- The style for the dialog box -->
    <style name="dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Remove the size limit -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <item name="android:padding">@dimen/padding</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="message" parent="dialog">
        <item name="android:layout_margin">@dimen/padding</item>
        <item name="android:textSize">@dimen/counter_size</item>
    </style>

    <style name="ok" parent="dialog">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_gravity">right</item>

        <item name="android:text">@string/ok</item>
        <item name="android:textSize">@dimen/ok_size</item>

        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
    </style>
</resources>
